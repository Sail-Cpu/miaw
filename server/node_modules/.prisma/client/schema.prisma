generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  user_id  Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
  job      String
  os       String
}

model applications {
  app_id          Int            @id @unique @default(autoincrement())
  app_name        String         @unique
  app_description String
  app_logo        Int?
  app_images      String[]
  categorie_id    Int
  app_categories  app_categories @relation(fields: [categorie_id], references: [categorie_id])
}

model app_categories {
  categorie_id   Int            @id @default(autoincrement())
  categorie_name String         @unique
  applications   applications[]
}
